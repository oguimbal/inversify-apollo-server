{
    "version": "0.2.0",
    "configurations": [
        {
        "name": "Debug Mocha Tests",
        "type": "node",
        "request": "attach",
        "port": 9229,
        "protocol": "inspector",
        "timeout": 30000,
        "stopOnEntry": false,
        "skipFiles": [
