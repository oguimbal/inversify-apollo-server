{
    "version": "0.2.0",
    "configurations": [
        {
          "type": "node",
          "request": "launch",
          "name": "Launch minimal sample",
          "cwd": "${workspaceFolder}",
          "args": ["${workspaceFolder}/sample/minimal/index.ts"],
          "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
          "protocol": "inspector",
          "sourceMaps": true,
          "env": {
            "NODE_ENV": "development"
          },
          "skipFiles": [
              "<node_internals>/**"
          ]
        },
        {
        "name": "Debug Mocha Tests",
        "type": "node",
        "request": "attach",
        "port": 9229,
        "protocol": "inspector",
        "timeout": 30000,
        "stopOnEntry": false,
        "skipFiles": [
            "${workspaceRoot}/node_modules/**/*.js",
            "<node_internals>/**/*.js"
        ],
        }
    ]
}